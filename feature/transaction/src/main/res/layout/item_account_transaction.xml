<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/category_selector"
    android:clickable="true"
    android:elevation="4dp"
    android:focusable="true"
    android:padding="6dp">

    <ImageView
        android:id="@+id/image_view_icon_account"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="center"
        android:src="@drawable/icon_cash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.1" />

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="NAME"
        app:layout_constraintEnd_toStartOf="@id/image_view_checked"
        app:layout_constraintStart_toEndOf="@id/image_view_icon_account"
        app:layout_constraintTop_toTopOf="@id/image_view_icon_account" />

    <TextView
        android:id="@+id/text_view_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1.000.000.000 Ä‘"
        app:layout_constraintBottom_toBottomOf="@id/image_view_icon_account"
        app:layout_constraintEnd_toStartOf="@id/image_view_checked"
        app:layout_constraintStart_toEndOf="@id/image_view_icon_account"
        app:layout_constraintTop_toBottomOf="@id/text_view_name" />

    <ImageView
        android:id="@+id/image_view_checked"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="center"
        android:src="@drawable/icon_submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>