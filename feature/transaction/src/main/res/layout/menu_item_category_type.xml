<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp"
    android:paddingVertical="14dp"
    android:minHeight="56dp">

    <!-- Start icon -->
    <ImageView
        android:id="@+id/icon_start"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/v2_ic_home_menu_expense" />

    <!-- Text -->
    <TextView
        android:id="@+id/text1"
        style="@style/TextAppearance.App.Title.Black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="normal"
        tool:text="Expense" />

    <!-- End tick icon (only visible when selected) -->
    <ImageView
        android:id="@+id/icon_tick"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_check_primary_20dp"
        android:visibility="gone"
        app:tint="@color/blue_bg" />

</LinearLayout>