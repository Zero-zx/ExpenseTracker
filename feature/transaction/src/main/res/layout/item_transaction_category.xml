<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!-- Checkbox for selection mode -->
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkboxSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:clickable="false"
        android:focusable="false"
        android:visibility="visible" />

    <!-- Left icon (rounded background can be provided by drawable if available) -->
    <ImageView
        android:id="@+id/imageIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/chi_1_an_uong" />

    <!-- Title -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/margin_medium">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            tools:text="Gift" />

        <TextView
            android:id="@+id/textSubTitle"
            style="@style/TextAppearance.App.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Right: amount and small source label -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D32F2F"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="0 đ" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageSource"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/account_wallet" />

            <TextView
                android:id="@+id/textSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp"
                tools:text="Ví tiền mặt" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
