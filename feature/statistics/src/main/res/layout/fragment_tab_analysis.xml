<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/margin_medium_normal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_date_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_normal"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/icon_date_range"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_v2_calendar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/gray_big_icon" />

            <TextView
                android:id="@+id/text_view_date_range"
                style="@style/TextAppearance.App.Normal.Black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="01/2025 - 12/2025"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/icon_date_range"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Category Filter -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_category_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_normal"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/icon_category"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/v2_ic_outcome_analysic_report"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/gray_big_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/icon_arrow_category"
                app:layout_constraintStart_toEndOf="@id/icon_category"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    style="@style/TextAppearance.App.Small.Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_expense_category" />

                <TextView
                    android:id="@+id/text_view_category"
                    style="@style/TextAppearance.App.Normal.Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_all_expense_categories" />
            </LinearLayout>

            <ImageView
                android:id="@+id/icon_arrow_category"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_next_double"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/gray_big_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Accounts Filter -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_account_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_normal"
            android:background="@drawable/rounded_background"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/icon_account"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/v2_ic_new_account_design"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/gray_big_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/icon_arrow_account"
                app:layout_constraintStart_toEndOf="@id/icon_account"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    style="@style/TextAppearance.App.Small.Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_account" />

                <TextView
                    android:id="@+id/text_view_account"
                    style="@style/TextAppearance.App.Normal.Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_all_accounts" />
            </LinearLayout>

            <ImageView
                android:id="@+id/icon_arrow_account"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_next_double"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/gray_big_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="8dp"
            android:padding="16dp" />

        <!-- Summary Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_background"
            android:padding="16dp">

            <TextView
                android:id="@+id/label_total_expense"
                style="@style/TextAppearance.App.Normal.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_total_income"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_total_expense"
                style="@style/TextAppearance.App.Normal.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 ₫"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_average_expense"
                style="@style/TextAppearance.App.Normal.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/text_average_collection_day"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_total_expense" />

            <TextView
                android:id="@+id/text_view_average_expense"
                style="@style/TextAppearance.App.Normal.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 ₫"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_total_expense" />

            <!-- Income labels (for income analysis) -->
            <TextView
                android:id="@+id/label_total_income"
                style="@style/TextAppearance.App.Normal.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Income"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_total_income"
                style="@style/TextAppearance.App.Normal.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 ₫"
                android:textColor="@color/green_income"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_average_income"
                style="@style/TextAppearance.App.Normal.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Average collection/month"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_total_income" />

            <TextView
                android:id="@+id/text_view_average_income"
                style="@style/TextAppearance.App.Normal.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 ₫"
                android:textColor="@color/green_income"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_total_income" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Monthly Breakdown List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_monthly_breakdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:nestedScrollingEnabled="false" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>

