<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rounded_background"
    android:clickable="true"
    android:focusable="true"
    android:padding="16dp">

    <!-- Circular Icon with Letter -->
    <TextView
        android:id="@+id/text_view_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/circle_background_blue"
        android:gravity="center"
        android:text="H"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Event Name -->
    <TextView
        android:id="@+id/text_view_name"
        style="@style/TextAppearance.App.Normal.Black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Hựa"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/text_view_date"
        app:layout_constraintEnd_toStartOf="@id/text_view_amount"
        app:layout_constraintStart_toEndOf="@id/text_view_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Date -->
    <TextView
        android:id="@+id/text_view_date"
        style="@style/TextAppearance.App.Small.Black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="19/11/2025"
        android:textColor="@color/gray_big_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_view_amount"
        app:layout_constraintStart_toEndOf="@id/text_view_icon"
        app:layout_constraintTop_toBottomOf="@id/text_view_name" />

    <!-- Amount -->
    <TextView
        android:id="@+id/text_view_amount"
        style="@style/TextAppearance.App.Normal.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1,000,000 ₫"
        android:textColor="@color/red_expense"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

