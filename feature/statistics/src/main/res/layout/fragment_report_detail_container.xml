<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:paddingTop="@dimen/padding_edges">

    <LinearLayout
        android:id="@+id/layout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="@dimen/top_icon_size"
            android:layout_height="@dimen/top_icon_size"
            android:background="@drawable/ripple_image_button"
            android:src="@drawable/v2_ic_back_gray"
            app:tint="@color/gray_top_icon" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dropdown_menu_report"
            style="@style/Widget.App.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/auto_complete_report_type"
                style="@style/TextAppearance.App.Title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dropdown_height"
                android:background="@drawable/blue_outline_rounded_background"
                android:gravity="center"
                android:inputType="none"
                android:minHeight="0dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="2dp"
                android:text="@string/text_financial_statement"
                android:textAlignment="center"
                android:textColor="@color/blue_bg" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/button_share"
            android:layout_width="@dimen/top_icon_size"
            android:layout_height="@dimen/top_icon_size"
            android:background="@drawable/ripple_image_button"
            android:src="@drawable/ic_share_code"
            android:visibility="invisible"
            app:tint="@color/gray_big_icon" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_top_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>

