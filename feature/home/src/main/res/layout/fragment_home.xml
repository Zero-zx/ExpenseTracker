<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/back_ground_tab_more_account_namal_light"
        app:layout_constraintHeight_percent="0.3" />

    <!-- AppBarLayout wrapping both header and collapsible balance report -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:paddingTop="@dimen/dimen_padding_top"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Toolbar: Fixed Header (Avatar, Greeting, Icons) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="@dimen/dimen_padding_top"
            android:paddingBottom="16dp">

            <!-- Avatar -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/avatar_card"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@android:color/white"
                app:strokeWidth="2dp">

                <TextView
                    android:id="@+id/text_view_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="D"
                    android:textColor="@color/blue_bg"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Greeting and Username -->
            <TextView
                android:id="@+id/text_view_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Hi!"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/avatar_card"
                app:layout_constraintTop_toTopOf="@id/avatar_card" />

            <TextView
                android:id="@+id/text_view_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="dthieu2512"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/avatar_card"
                app:layout_constraintTop_toBottomOf="@id/text_view_hello" />

            <!-- Refresh Icon -->
            <ImageView
                android:id="@+id/icon_refresh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="Refresh"
                android:src="@drawable/v2_ic_refresh_white"
                app:layout_constraintEnd_toStartOf="@id/icon_notification"
                app:layout_constraintTop_toTopOf="@id/avatar_card"
                app:tint="@android:color/white" />

            <!-- Notification Icon -->
            <ImageView
                android:id="@+id/icon_notification"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Notification"
                android:src="@drawable/icon_calender_today"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/avatar_card"
                app:tint="@android:color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content with ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToOutline="true"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_balance_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="24dp"
                app:layout_collapseMode="parallax">

                <TextView
                    android:id="@+id/text_view_balance_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Total balance"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Balance Amount -->
                <TextView
                    android:id="@+id/text_view_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="-222 $"
                    android:textColor="@android:color/white"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_balance_label" />

                <!-- Eye Icon -->
                <ImageView
                    android:id="@+id/icon_eye"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="12dp"
                    android:contentDescription="Toggle visibility"
                    android:src="@drawable/icon_search"
                    app:layout_constraintBottom_toBottomOf="@id/text_view_balance"
                    app:layout_constraintStart_toEndOf="@id/text_view_balance"
                    app:layout_constraintTop_toTopOf="@id/text_view_balance"
                    app:tint="@android:color/white" />

                <!-- Arrow Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/button_arrow"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="#4DFFFFFF"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_balance_label">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:contentDescription="Navigate"
                        android:src="@drawable/icon_chevron"
                        app:tint="@android:color/white" />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-16dp"
                android:background="@drawable/rounded_16dp_background"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Expense vs Income"
                        android:textColor="@color/black_text"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- Settings Icon -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/button_settings"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="1dp"
                        app:strokeColor="#E5E7EB"
                        app:strokeWidth="1dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:contentDescription="Settings"
                            android:src="@drawable/custom_ic_setting_v2"
                            app:tint="@color/gray_text" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Time Period Dropdown -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/button_time_period"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="1dp"
                        app:strokeColor="#E5E7EB"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="12dp">

                            <TextView
                                android:id="@+id/text_time_period"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="This Month"
                                android:textColor="@color/black_text"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginStart="8dp"
                                android:contentDescription="Dropdown"
                                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                                app:tint="@color/gray_text" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- No Data State -->
                <TextView
                    android:id="@+id/text_no_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="32dp"
                    android:gravity="center"
                    android:text="No data"
                    android:textColor="@color/gray_text"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <!-- Charts and Data Section -->
                <LinearLayout
                    android:id="@+id/layout_charts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="16dp">

                    <!-- Bar Chart -->
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/bar_chart"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="24dp" />

                    <!-- Income, Expense, Difference -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Income Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Income"
                                android:textColor="@color/gray_text" />

                            <TextView
                                android:id="@+id/text_income"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 $"
                                android:textColor="#10B981"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Expense Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextAppearance.App.Normal.Gray"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Expense" />

                            <TextView
                                android:id="@+id/text_expense"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2,222 $"
                                android:textColor="@color/red_money"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Difference Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextAppearance.App.Normal.Gray"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Difference" />

                            <TextView
                                android:id="@+id/text_difference"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-2,222 $"
                                android:textColor="@color/black_text"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Category Breakdown -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="16dp">

                    <!-- Pie Chart -->
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pie_chart"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="24dp" />

                    <!-- Category List -->
                    <LinearLayout
                        android:id="@+id/layout_category_list"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Category 1 -->
                        <LinearLayout
                            android:id="@+id/layout_category_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <View
                                android:id="@+id/view_color_1"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/text_category_1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/gray_text"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/text_percentage_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_text"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Category 2 -->
                        <LinearLayout
                            android:id="@+id/layout_category_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <View
                                android:id="@+id/view_color_2"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/text_category_2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/gray_text"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/text_percentage_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_text"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Category 3 -->
                        <LinearLayout
                            android:id="@+id/layout_category_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <View
                                android:id="@+id/view_color_3"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/text_category_3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/gray_text"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/text_percentage_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_text"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Record History Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_record_history"
                    style="@style/TextAppearance.App.Normal.Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@android:color/white"
                    android:paddingHorizontal="24dp"
                    android:text="Record history"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    app:cornerRadius="8dp"
                    app:strokeColor="#CACDD3"
                    app:strokeWidth="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_budget" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextAppearance.App.Normal.Black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Budget"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/TextAppearance.App.Normal.Gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Better manage your spending" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:background="@drawable/background_image_cyan_circle"
                        android:padding="8dp"
                        android:src="@drawable/v2_ic_add_while"
                        android:tint="@color/blue_bg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_saving" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextAppearance.App.Normal.Black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saving Account"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/TextAppearance.App.Normal.Gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Savings books are managed here" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:background="@drawable/background_image_cyan_circle"
                        android:padding="8dp"
                        android:src="@drawable/v2_ic_add_while"
                        android:tint="@color/blue_bg" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

