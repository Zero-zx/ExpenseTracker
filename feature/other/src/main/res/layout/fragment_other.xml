<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/back_ground_tab_more_account_namal_light"
        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:fillViewport="true"
        android:paddingTop="@dimen/padding_edges"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_medium">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/avatar_card"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeColor="@android:color/white"
                        app:strokeWidth="2dp">

                        <TextView
                            android:id="@+id/text_view_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:gravity="center"
                            android:text="U"
                            android:textColor="@color/blue_bg"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/text_view_username"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="8dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="User1234"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/icon_notification"
                        app:layout_constraintStart_toEndOf="@id/avatar_card"
                        app:layout_constraintTop_toTopOf="@id/avatar_card" />

                    <TextView
                        android:id="@+id/text_view_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="user1234@gmail.com"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@id/icon_notification"
                        app:layout_constraintStart_toEndOf="@id/avatar_card"
                        app:layout_constraintTop_toBottomOf="@id/text_view_username" />

                    <ImageView
                        android:id="@+id/icon_notification"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="Notification"
                        android:src="@drawable/v2_ic_notify_white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/avatar_card"
                        app:tint="@android:color/white" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- User Profile Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_premium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FF9800"
                        android:text="Explore premium"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        app:cornerRadius="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/button_coins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="#4DFFFFFF"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/padding_small">

                                <ImageView
                                    android:layout_width="@dimen/normal_icon_size"
                                    android:layout_height="@dimen/normal_icon_size"
                                    android:src="@drawable/ic_coin" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:text="100 Coins"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/button_referral"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#4DFFFFFF"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/padding_small">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_share_code"
                                    app:tint="@color/blue_primary" />

                                <TextView
                                    android:id="@+id/text_referral_code"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:text="Referral Code 4555898"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="@dimen/normal_icon_size"
                                    android:layout_height="@dimen/normal_icon_size"
                                    android:src="@drawable/icon_chevron"
                                    android:tint="@color/white" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Feature Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feature"
                    android:textColor="@color/black_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <GridLayout
                    android:id="@+id/grid_features"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:alignmentMode="alignMargins"
                    android:columnCount="4"
                    android:useDefaultMargins="false">

                    <!-- Row 1 -->
                    <ui.SquareIconButton
                        android:id="@+id/button_feature_theme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:src="@drawable/ic_menu_theme"
                        app:text="Theme" />

                    <ui.SquareIconButton
                        android:id="@+id/button_feature_budget"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:src="@drawable/chi_5_duoc_cho_tang"
                        app:text="Budget" />

                    <ui.SquareIconButton
                        android:id="@+id/button_feature_categories"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:src="@drawable/custom_icon_category_v2"
                        app:text="Categories" />

                    <ui.SquareIconButton
                        android:id="@+id/button_feature_template"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:src="@drawable/custome_ic_template"
                        app:text="Template record" />

                    <ui.SquareIconButton
                        android:id="@+id/button_feature_travel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:src="@drawable/custom_icon_event_trip"
                        app:text="Travel" />

                    <ui.SquareIconButton
                        android:id="@+id/button_feature_income_plan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:src="@drawable/custom_ic_setting_expenditure_v2"
                        app:text="Income plan/Expense plan" />

                    <!-- Row 3 -->
                    <ui.SquareIconButton
                        android:id="@+id/button_feature_shopping_list"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:src="@drawable/custom_icon_shopping_v2"
                        app:text="Shopping list" />

                    <ui.SquareIconButton
                        android:id="@+id/button_feature_website"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:src="@drawable/ic_use_website"
                        app:text="Use on Website" />

                </GridLayout>

            </LinearLayout>

            <!-- Utilities Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Utilities"
                    android:textColor="@color/black_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <GridLayout
                    android:id="@+id/grid_utilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:alignmentMode="alignMargins"
                    android:columnCount="4"
                    android:useDefaultMargins="false">

                    <!-- Row 1 -->
                    <ui.SquareIconButton
                        android:id="@+id/button_utility_loan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:src="@drawable/custom_ic_setting_interest_v2"
                        app:text="Calculate loan interest" />

                    <ui.SquareIconButton
                        android:id="@+id/button_utility_exchange_rates"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:src="@drawable/custom_ic_exchange_rate_v2"
                        app:text="Exchange rates utility" />

                    <ui.SquareIconButton
                        android:id="@+id/button_utility_savings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:src="@drawable/custom_ic_setting_keeper_v2"
                        app:text="Savings" />

                    <ui.SquareIconButton
                        android:id="@+id/button_utility_widget"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:src="@drawable/custom_ic_setting_widget_v2"
                        app:text="Widget" />

                    <ui.SquareIconButton
                        android:id="@+id/button_utility_export"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:src="@drawable/custom_icon_exportdata"
                        app:text="Export data" />

                </GridLayout>

            </LinearLayout>

            <!-- Settings Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="24dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_setting" />

            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

