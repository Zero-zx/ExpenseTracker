<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <include app:graph="@navigation/transaction_nav_graph" />
    <navigation
        android:id="@+id/transaction_graph"
        app:startDestination="@id/transactionAddFragment">
        <fragment
            android:id="@+id/transactionAddFragment"
            android:name="presentation.add.ui.TransactionAddFragment" />
        <fragment
            android:id="@+id/categorySelectFragment"
            android:name="presentation.add.ui.CategorySelectFragment" />
        <fragment
            android:id="@+id/accountSelectFragment"
            android:name="presentation.add.ui.AccountSelectFragment"
            android:label="AccountSelectFragment" />
        <fragment
            android:id="@+id/eventSelectFragment"
            android:name="presentation.add.ui.EventSelectFragment"
            android:label="EventSelectFragment" />
    </navigation>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.home.home.HomeFragment" />

    <fragment
        android:id="@+id/transactionListFragment"
        android:name="presentation.list.TransactionListFragment" />


    <fragment
        android:id="@+id/accountListFragment"
        android:name="list.AccountListFragment">
        <action
            android:id="@+id/action_accountListFragment_to_addAccountFragment"
            app:destination="@id/addAccountFragment" />
    </fragment>
    <fragment
        android:id="@+id/addAccountFragment"
        android:name="add.AddAccountFragment" />

    <fragment
        android:id="@+id/statisticsFragment"
        android:name="presentation.StatisticsFragment"
        android:label="Statistics" />

    <fragment
        android:id="@+id/eventListFragment"
        android:name="com.example.home.event.list.EventListFragment"
        android:label="Events">
        <action
            android:id="@+id/action_eventListFragment_to_addEventFragment"
            app:destination="@id/addEventFragment" />
    </fragment>

    <fragment
        android:id="@+id/addEventFragment"
        android:name="com.example.home.event.add.AddEventFragment"
        android:label="Add Event">
        <action
            android:id="@+id/action_addEventFragment_to_addParticipantsFragment"
            app:destination="@id/addParticipantsFragment" />
    </fragment>

    <fragment
        android:id="@+id/addParticipantsFragment"
        android:name="com.example.home.event.add.AddParticipantsFragment"
        android:label="Add Participants" />

</navigation>