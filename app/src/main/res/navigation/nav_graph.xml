<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/transactionAddFragment">

    <fragment
        android:id="@+id/transactionListFragment"
        android:name="presentation.list.TransactionListFragment" />
    <fragment
        android:id="@+id/transactionAddFragment"
        android:name="presentation.add.TransactionAddFragment" >
        <action
            android:id="@+id/action_transactionAddFragment_to_transactionListFragment"
            app:destination="@id/transactionListFragment" />
        <action
            android:id="@+id/action_transactionAddFragment_to_categorySelectFragment"
            app:destination="@id/categorySelectFragment" />
    </fragment>
    <fragment
        android:id="@+id/categorySelectFragment"
        android:name="presentation.add.CategorySelectFragment" />
    
    <fragment
        android:id="@+id/accountListFragment"
        android:name="list.AccountListFragment" >
        <action
            android:id="@+id/action_accountListFragment_to_addAccountFragment"
            app:destination="@id/addAccountFragment" />
    </fragment>
    <fragment
        android:id="@+id/addAccountFragment"
        android:name="add.AddAccountFragment" />
</navigation>