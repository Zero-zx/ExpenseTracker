        <item name="colorSecondaryContainer">@color/my_app_on_primary</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">@color/my_app_on_primary</item>
        <item name="colorSurfaceVariant">@color/my_app_on_surface_variant</item>
