<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state: Only show the bottom underline -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Offset the stroke on 3 sides to hide them, leaving only the bottom -->
            <item android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape android:shape="rectangle">
                    <stroke android:width="0.5dp" android:color="@color/blue_primary" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default state: No underline -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>
