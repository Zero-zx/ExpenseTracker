<?xml version="1.0" encoding="utf-8"?><!-- res/drawable/category_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">    <!-- State when the item is selected -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/my_app_primary_variant" />
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="@android:color/background_light" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>
