<?xml version="1.0" encoding="utf-8"?><!-- res/drawable/category_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">    <!-- State when the item is selected -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_item_bg" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>
